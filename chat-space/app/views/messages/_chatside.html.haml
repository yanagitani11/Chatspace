.side
  .side__user
    .side__user-content
      .side__user-name
        = current_user.name

      = link_to new_group_path, class: "side__user-link-edit" do
        %i.fa.fa-edit
      = link_to edit_user_path(current_user), class: "side__user-link-cog" do
        %i.fa.fa-cog

  .side__group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side__group-list
          .side__group-name
            = group.name
          .side__group-message
            = group.show_last_message

