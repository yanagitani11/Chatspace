= render "/shared/side_ber"
.chat
  .header
    .left-header
      .left-header__title
        = @group.name
      .left-header__members
        - @group_user.each do |user|
          = p user
    .right-header
      = link_to edit_group_path(@group) do
        .right-hedder__button Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "form__message", placeholder: "type a message",id:"form" 
      .form__mask
        = f.label :image, class: "form__mask__image" do
          = fa_icon "picture-o", class: "icon"
          = f.file_field :image, class: "hidden"
      = f.submit "Send", class: "form__submit"
